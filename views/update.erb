<form action="/show/<%= @result['id'] %>/update" method='post'>
    <table class="inputs">


      <tr>
          <td>Title:</td>
          <td><input type='text' name='title' value=<%=@result['title']%>></td>
      </tr>
      <tr>
          <td>Due Date (YYYY-MM-DD):</td>
          <td><input type= 'text' name='due_date' value =<%=@result['due_date']%>></td>
      </tr>
          <td>Status:</td>
          <td>
            <select name='status'>
                <option value = 'pending'>pending</option>
                <option value= 'completed'>completed</option>
            </select>
          </td>
      <tr>
        <td>Details:</td>
        <td><input type= 'text' name='details' value=<%=@result['details']%>></td>
      </tr>
      <tr>
        <td>Owner:</td>
        <td><input type= 'text' name='owner' value =<%=@result['owner']%>></td>
      </tr>
      </table>
      <button>Update!</button>
    </form>
